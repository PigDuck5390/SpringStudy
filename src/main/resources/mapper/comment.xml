<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.example.demo.mapper.CommentMapper">
  	<select id="selectComment" parameterType="int" resultType="Comment">
        SELECT cid, bid, uid, cmtext FROM comment WHERE bid = #{bid} ORDER BY cid ASC
    </select>

    <insert id="insertComment" parameterType="Comment">
        INSERT INTO comment (bid, uid, cmtext) VALUES (#{bid}, #{uid}, #{cmtext})
    </insert>

    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment WHERE cid = #{cid}
    </delete>
  </mapper>